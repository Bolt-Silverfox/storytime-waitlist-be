{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.build.json",
    "assets": [
      {
        "include": "**/*.hbs",
        "outDir": "dist/waitlist/templates",
        "watchAssets": true
      }
    ]
  },
  "builder": {
    "type": "webpack",
    "options": {
      "watch": true
    }
  }
}